# Pythonエージェント用Dockerfile
FROM python:3.11-alpine

# システム依存関係をインストール
RUN apk add --no-cache \
    gcc \
    musl-dev \
    libffi-dev \
    openssl-dev \
    && rm -rf /var/cache/apk/*

# 作業ディレクトリを設定
WORKDIR /app

# Python依存関係をインストール
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# アプリケーションコードをコピー
COPY agent.py .
COPY agents/ ./agents/
COPY food-cart-demo/tools.py ./tools.py
COPY playground.py .

# tmpディレクトリを作成（データベースファイル用）
RUN mkdir -p /app/tmp

# ポートを公開（Playground用）
EXPOSE 8000

# デフォルトコマンド
CMD ["python", "playground.py"]
